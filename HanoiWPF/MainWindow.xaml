<Window x:Class="HanoiWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hanoi tornyai" Height="450" Width="800">
    <Grid>
        <Canvas Name="DrawArea" Background="White" Margin="0,50,0,0"/>
        <StackPanel Orientation="Horizontal" Margin="10,10,0,0" VerticalAlignment="Top">
            <Button Name="StartButton" Content="Start" Width="80" Margin="0,0,10,0" Click="StartButton_Click"/>
            <TextBlock Text="Korongok száma:" VerticalAlignment="Center"/>
            <Slider Name="DiskSlider" Minimum="1" Maximum="10" Value="5" Width="100" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>
